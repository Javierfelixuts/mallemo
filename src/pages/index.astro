---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Slider from '~/components/Slider';

const metadata = {
  title: 'Mallemo Trading LLC',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    id='home'
    actions={[
      {
        variant: 'secondary',
        text: 'More Information',
        href: 'https://api.whatsapp.com/send?phone=5205856477',
        target: '_blank',
        icon: 'tabler:brand-whatsapp',
      },
    ]}
    image={{ src: '~/assets/images/clean-house-03.jpeg', alt: 'house for remodeling' }}
  >
    <Fragment 
      slot="title">
      
      <span class="uppercase">Purchase of 
      <span class="text-accent dark:text-white highlight"> dilapidated</span> house for remodeling
      </span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Incorporate</span> the latst trends and technologies in our remodeling to offer modern. efficient and high value-added properties
      </span>
    </Fragment>
  </Hero>

  <FAQs
    title='ABOUT US'
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Mision',
        description:
          "To transform properties into exceptional homes, creating value for our clients trough innovative and sustainable remodels that enhace quality of life and revitalize communities.",
      },
      {
        title: 'Vision',
        description:
          'To be a leading company in the renovation and sale of properties, recognized for our excellence in design, construction quality and ability to turn houses into desirable homes, contributing to urban development and the creation of more livable spaces.',
      },
      {
        title: 'Goals',
        description:
          "Quality in Remodeling: To ensure that each remodeled property meets the highest standards of quality, functionality and aesthetics, exceeding our clientâ€™s expectations.",
      },
      {
        title: "Sustainable Growth",
        description:
          "Expand our presence in the real estate market through strategic acquisitions, while maintaining solid and sustainable financial growth.",
      },
      {
        title: 'Innovation in Design',
        description:
          " Incorporate the latest trends and technologies in our remodeling to offer modern, efficient and high value-added properties.",
      },
      {
        title: 'Community Contribution',
        description:
          "Revitalize communities through the improvement of aging properties, contributing to the revaluation of urban areas and the creation of safer and more attractive environments.",
      },
    ]}
  />

  <!-- Note Widget ******************* -->


  <!-- Features Widget *************** -->
   <Slider client:visible ></Slider>
  
  <Features
    id="services"
    title="What we offer"
    items={[
      {
        title: 'Exclusive Properties for Sale',
        description:
          'Explore our selection of exclusive properties in prime locations. From luxurious homes to modern apartments, find your dream home with us.',
        icon: 'tabler:report-money',
      },
      {
        title: 'Residential and Commercial Rentals',
        description:
          'We offer rental options tailored to your needs. Discover a variety of homes, offices, and commercial spaces in the most convenient areas.',
        icon: 'tabler:home',
      },
      {
        title: 'Real Estate Investment Consulting',
        description:
          'Maximize your investments with our real estate experts. We help you identify profitable opportunities and make informed decisions in the property market.',
        icon: 'tabler:mood-puzzled',
      },
      {
        title: 'Property Management Services',
        description:
          'Leave the management of your properties to professionals. We handle administration, maintenance, and leasing, so you can enjoy your rental income without any hassle.',
        icon: 'tabler:checkup-list',
      },
      {
        title: 'Construction and Development Projects',
        description:
          " Engage in innovative construction and development projects. From planning to execution, we guide you every step of the way to ensure the success of your investment.",
        icon: 'tabler:backhoe',
      },
      {
        title: 'Property Valuation and Appraisal',
        description:
          ' Get an accurate and reliable appraisal of your property. Our experts provide detailed valuations based on the current market, giving you confidence in your decisions.',
        icon: 'tabler:brand-cashapp',
      },
    ]}
  />
<!-- Swiper -->
 
  <!-- Content Widget **************** -->

  <Content
    id="about"
    isReversed
    title="Mallemo's Blueprint: Fun Meets Functionality!"
    items={[
      {
        title: 'Built on top',
        description:
          'Benefiting from the performance and developer-friendly features of this modern static site generator.',
      },
      {
        title: 'Styled',
        description:
          'Facilitating rapid design and consistent styling with this highly popular utility-first CSS framework.',
      },
      {
        title: 'Compatibility',
        description:
          'Ensure your website looks and functions consistently across various web browsers, delivering a seamless experience to all users.',
      },
    ]}
    image={{
      src: '~/assets/images/clean-house.jpeg',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Building on modern foundations</h3>
      Gain a competitive advantage by incorporating industry leading practices
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'High level of customization',
        description: `Tailor the template effortlessly to match your brand's identity and requirements, making your website distinct and saving you time.`,
      },
      {
        title: 'Multiple layout possibilities',
        description:
          'Explore various layout options to find the structure that best presents your content, enhancing user engagement and navigation.',
      },
      {
        title: 'Fully responsive design',
        description:
          "Ensure your website's optimal performance on various devices and screen sizes, providing a consistent and enjoyable user experience.",
      },
      {
        title: 'Integration of media',
        description:
          'Seamlessly incorporate images, videos, and multimedia elements that enhance your content and engage visitors effectively.',
      },
    ]}
    image={{
      src: '~/assets/images/modern-house-01.jpg',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot="content">Ensure your online presence truly represents you.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>


  <!-- <Stats
    stats={[
      { title: 'Downloads', amount: '132K' },
      { title: 'Stars', amount: '24.8K' },
      { title: 'Forks', amount: '10.3K' },
      { title: 'Users', amount: '48.4K' },
    ]}
  /> -->

  <!-- CallToAction Widget *********** -->
<div class="flex justify-center items-center flex-wrap">


  <ContactUs
    id="contact"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
  />
  <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3374.5689188318565!2d-110.91468542522641!3d32.242771811098265!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x86d671d0605d408f%3A0xfeb36a9519ecf6b8!2s1645%20N%20Winstel%20Blvd%2C%20Tucson%2C%20AZ%2085716%2C%20EE.%20UU.!5e0!3m2!1ses-419!2smx!4v1724172012954!5m2!1ses-419!2smx" width="600" height="700" style="border:0; margin:15px" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</div>

</Layout>
