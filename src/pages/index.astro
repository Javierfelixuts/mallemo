---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import ContactForm from '~/components/ContactForm.tsx';
import FAQs from '~/components/widgets/FAQs.astro';
import SectionVideoRemodeling from '~/components/SectionVideoRemodeling.tsx';
/* import ContactUs from '~/components/widgets/Contact.astro'; */
import Slider from '~/components/Slider';
import SliderOffice from '~/components/SliderOffice';


const metadata = {
  title: 'Mallemo Trading LLC DBA Real Estate Focus',
  ignoreTitleTemplate: true,
};

---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    id='home'
    
    image={{ src: '~/assets/images/hero-image.png', alt: 'house for remodeling' }}
  >
    <Fragment 
      slot="title">
      
      <span class="uppercase">Purchase of
      <span class="text-accent dark:text-white highlight"> a Dilapidated</span> House for Remodeling and New Home Construction.
      </span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Incorporate</span> the latest trends and technologies in our remodeling to offer modern, efficient and high value-added properties.
      </span>
    </Fragment>
  </Hero>
  <span id="about"></span>


  <FAQs
    title='ABOUT US'
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        
        title: 'Mission',
        description:
          "To transform properties into exceptional homes, creating value for our clients through innovative and sustainable remodels that enhance quality of life and revitalize communities.",
      },
      {
        title: 'Vision',
        description:
          'To be a leading company in the renovation and sale of properties, recognized for our excellence in design, construction quality and ability to turn houses into desirable homes, contributing to urban development and the creation of more livable spaces.',
      },
      {
        title: 'Goals',
        description:
          "Quality in Remodeling: To ensure that each remodeled property meets the highest standards of quality, functionality and aesthetics, exceeding our clients expectations.",
      },
      {
        title: "Sustainable Growth",
        description:
          "Expand our presence in the real estate market through strategic acquisitions, while maintaining solid and sustainable financial growth.",
      },
      {
        title: 'Innovation in Design',
        description:
          " Incorporate the latest trends and technologies in our remodeling to offer modern, efficient and high-value-added properties.",
      },
      {
        title: 'Community Contribution',
        description:
          "Revitalize communities through the improvement of aging properties, contributing to the revaluation of urban areas and the creation of safer and more attractive environments.",
      },
    ]}
  />
  <span id="projects"></span>
   <br />
   <br />
   <br />
   <br />
   <br />
  <section class="mb-4" >
    
