---
export interface Props {
  src?: string;
  width?: string;
  height?: string;
}
const { src, width, height } = Astro.props;
---

  <video class="aspect-ratio" width={width} height={height} controls>
    <source src={src} type="video/mp4" />
    Su navegador no admite videos.
  </video>

<style>
  .aspect-ratio {
    aspect-ratio: 10 / 8;
    width: 100%;
  }
  .video-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 ratio */
    height: 0;
    overflow: hidden;
    max-width: 100%;
  }

  .video-container video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
